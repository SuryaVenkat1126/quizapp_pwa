{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["firebase/messaging"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",  // Change module to CommonJS
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",  // Update the include pattern to match TypeScript files
    "src/**/*.tsx", // Include TypeScript React files if applicable
    "src/**/*.js",  // Include JavaScript files if applicable
    "src/**/*.jsx"  // Include JavaScript React files if applicable
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "images",
    ] // Exclude the directory where your non-code files are stored


}
